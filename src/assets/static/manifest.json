{
    "manifest_version": 2,

    "name": "Snek",
    "description": "Help the community identify humans and rid out the imposter",
    "version": "1.2.0",

    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    },
    "icons": {
        "128": "icon.png"
    },
    "background": {
        "scripts": ["event.js"],
        "persistent": true
    },

    "permissions": [
        "activeTab",
        "contentSettings",
        "https://www.reddit.com/api/*",
        "storage"
    ],

    "content_scripts": [
        {
            "matches": ["https://gremlins-api.reddit.com/room*"],
            "js": ["contentScript.js"],
            "css": ["styleOverride.css"],
            "all_frames": true
        }
    ]
}
